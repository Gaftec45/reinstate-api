        function displayWalletAddress() {
            const selectedCrypto = document.querySelector('input[name="cryptoType"]:checked').value;

            // Hide all wallet addresses
            document.getElementById('bitcoinWallet').style.display = 'none';
            document.getElementById('usdtWallet').style.display = 'none';
            document.getElementById('ethereumWallet').style.display = 'none';
            document.getElementById('binanceWallet').style.display = 'none';

            // Display the selected wallet address
            document.getElementById(`${selectedCrypto}Wallet`).style.display = 'block';
        }

        function copyToClipboard(walletType) {
            const walletAddress = document.getElementById(`${walletType}`).textContent;
            const el = document.createElement('textarea');
            el.value = walletAddress;
            document.body.appendChild(el);
            el.select();
            document.execCommand('copy');
            document.body.removeChild(el);

            alert(`${walletType.toUpperCase()} address copied to clipboard!`);
        }
